class Solution(object):
    def isPalindrome(self, s):
        # Initialize two pointers: one at the start, one at the end
        left = 0
        right = len(s) - 1

        # Loop until the two pointers cross each other
        while left < right:

            # ðŸ” Skip non-alphanumeric characters from the left
            while left < right and not s[left].isalnum():
                left += 1

            # ðŸ” Skip non-alphanumeric characters from the right
            while left < right and not s[right].isalnum():
                right -= 1

            # ðŸ§ª Compare the characters in lowercase for case-insensitive comparison
            if s[left].lower() != s[right].lower():
                return False  # âŒ Not a palindrome

            # âœ… Move both pointers inward
            left += 1
            right -= 1

        # âœ… If all characters matched, itâ€™s a valid palindrome
        return True
