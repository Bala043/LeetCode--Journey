def twoSum(self, numbers, target):
    # Start with two pointers: one at the beginning and one at the end
    left = 0
    right = len(numbers) - 1

    # Keep moving the pointers until they meet
    while left < right:
        current_sum = numbers[left] + numbers[right]

        # If the sum is too big, move the right pointer to the left to reduce the sum
        if current_sum > target:
            right -= 1

        # If the sum is too small, move the left pointer to the right to increase the sum
        elif current_sum < target:
            left += 1

        # If the sum matches the target, return the 1-based indices
        else:
            return [left + 1, right + 1]
